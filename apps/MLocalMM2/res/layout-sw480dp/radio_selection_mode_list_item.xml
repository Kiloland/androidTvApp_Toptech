<?xml version="1.0" encoding="utf-8"?>

<!-- 列表单选模式 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"

    android:layout_height="wrap_content"

    android:descendantFocusability="blocksDescendants"

    android:gravity="center_vertical"

    android:orientation="horizontal" >



    <ImageView

        android:id="@+radio_selection_mode_list_item/iconImage"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="5dip" />



    <TextView

        android:id="@+radio_selection_mode_list_item/nameText"

        android:layout_width="370dip"

        android:layout_height="36dip"

        android:layout_marginLeft="10dip"

        android:ellipsize="marquee"

        android:gravity="center_vertical"

        android:marqueeRepeatLimit="marquee_forever"

        android:shadowColor="#0d7497"

        android:shadowDx="0"

        android:shadowDy="-2"

        android:shadowRadius="3"

        android:singleLine="true"

        android:textColor="@drawable/text_selector"

        android:textSize="12dip" />



    <TextView

        android:id="@+radio_selection_mode_list_item/formatText"

        android:layout_width="150dip"

        android:layout_height="36dip"

        android:layout_marginLeft="10dip"

        android:ellipsize="marquee"

        android:gravity="center_vertical"

        android:marqueeRepeatLimit="marquee_forever"

        android:shadowColor="#0d7497"

        android:shadowDx="0"

        android:shadowDy="-2"

        android:shadowRadius="3"

        android:singleLine="true"

        android:textColor="@drawable/text_selector"

        android:textSize="12dip" />



    <TextView

        android:id="@+radio_selection_mode_list_item/descriptionText"

        android:layout_width="wrap_content"

        android:layout_height="36dip"

        android:layout_marginLeft="10dip"

        android:gravity="center_vertical"

        android:shadowColor="#0d7497"

        android:shadowDx="0"

        android:shadowDy="-2"

        android:shadowRadius="3"

        android:singleLine="true"

        android:textColor="@drawable/text_selector"

        android:textSize="12dip" />



</LinearLayout>