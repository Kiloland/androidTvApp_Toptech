<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/glsurfaceview"
             android:layout_gravity="bottom"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >

    <LinearLayout
            android:id="@+id/video_glsurfaceview_layout"
            android:layout_marginRight="30dip"
            android:layout_width="658dp"
            android:layout_height="102dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@android:color/transparent">

        <ImageView
                android:id="@+id/thumbnail_topline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/line" >
        </ImageView>

        <com.jrm.localmm.business.video.VideoGLSurfaceView
                android:id="@+id/video_glsurfaceview"
                android:visibility="gone"
                android:layout_width="658dp"
                android:layout_height="90dp" />

        <ImageView
                android:id="@+id/thumbnail_bottomline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/line" >
        </ImageView>
    </LinearLayout>

</FrameLayout>