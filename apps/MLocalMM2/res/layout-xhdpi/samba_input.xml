<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_marginTop="0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="@string/samba_usr"
            android:textSize="15dip" />

        <EditText
            android:id="@+id/samba_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:imeOptions="actionNext|flagNoExtractUi|flagNoFullscreen"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="@string/samba_pwd"
            android:textSize="15dip" />

        <EditText
            android:id="@+id/samba_user_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:imeOptions="actionNext|flagNoExtractUi|flagNoFullscreen"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/samba_login"
            android:layout_width="86dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/samba_confirm"
            android:textSize="15dip" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <Button
            android:id="@+id/samba_cancel"
            android:layout_width="86dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/samba_cancel"
            android:textSize="15dip" />
    </LinearLayout>
</LinearLayout>