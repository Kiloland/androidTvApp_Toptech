<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:id="@+id/rl_name"          android:gravity="center"        android:layout_gravity="center"        android:layout_width="wrap_content"          android:layout_height="wrap_content"           android:padding="10dp">      <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/InputSource"    android:layout_gravity="center"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/list_menu_img_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:text="@string/str_input_source_title"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_width="266dp"
        android:layout_height="34dp" />
    <ListView
        android:id="@+id/ListView"
        android:layout_width="320dp"
        android:layout_marginTop="10dp"
        android:layout_height="380dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/title"                android:listSelector="@drawable/picture_mode_img_focus" />
</LinearLayout>
<LinearLayout      xmlns:android="http://schemas.android.com/apk/res/android"        android:id="@+id/InputSourceCEC"    android:visibility="gone"    android:layout_gravity="center"    android:layout_width="320dp"    android:layout_height="wrap_content"    android:background="@drawable/list_menu_img_bg"    android:layout_toRightOf="@+id/InputSource"    android:layout_marginLeft="1dp"    android:orientation="vertical">    <TextView        android:id="@+id/cecTitle"        android:text="@string/str_input_source_title"        android:layout_marginTop="50dp"        android:layout_marginLeft="20dp"        android:gravity="center"        android:textSize="24sp"        android:layout_width="266dp"        android:layout_height="34dp" />    <ListView        android:id="@+id/ListViewCEC"        android:layout_width="320dp"        android:layout_marginTop="10dp"        android:layout_height="380dp"        android:layout_marginBottom="30dp"           android:layout_below="@+id/cecTitle"                        android:listSelector="@drawable/button_state" /></LinearLayout >        </RelativeLayout>