                android:text="@string/str_factory_sound_toneffect" />

            <TextView
                android:id="@+id/textvalue_factory_sound_toneffect"
                style="@style/TextViewStyleValue"
                android:text="@string/str_textview_factory_otheroption_text_off" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_factory_audio_delay"
            style="@style/ItemCombo" >

            <TextView
                android:id="@+id/textview_factory_audio_delay"
                style="@style/TextViewStyleOption"
                android:text="@string/str_factory_audio_delay" />

            <TextView
                android:id="@+id/textvalue_factory_audio_delay"
                style="@style/TextViewStyleValue"
                android:text="@string/str_textview_factory_otheroption_text_off" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_factory_audio_spdif_delay"
            style="@style/ItemCombo" >

            <TextView
                android:id="@+id/textview_factory_audio_spdif_delay"
                style="@style/TextViewStyleOption"
                android:text="@string/str_factory_audio_spdif_delay" />

            <TextView
                android:id="@+id/textvalue_factory_audio_spdif_delay"
                style="@style/TextViewStyleValue"
                android:text="@string/str_textview_factory_otheroption_text_off" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_factory_audio_nr"
            style="@style/ItemCombo" >

            <TextView
                android:id="@+id/textview_factory_audio_nr"
                style="@style/TextViewStyleOption"
                android:text="@string/str_factory_audio_nr" />

            <TextView
                android:id="@+id/textvalue_factory_audio_nr"
                style="@style/TextViewStyleValue"
                android:text="@string/str_textview_factory_otheroption_text_off" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
