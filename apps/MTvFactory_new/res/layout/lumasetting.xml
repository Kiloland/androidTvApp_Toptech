<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="#3280A0"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="@string/str_textview_factory_pq_lumasetting"
        android:textColor="#ffffff"
        android:textSize="17dip" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- For Pre Yoffset -->

            <LinearLayout
                android:id="@+id/linearlayout_factory_pq_lummasetting_preyoffset"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:background="@drawable/button_state"
                android:nextFocusUp="@+id/linearlayout_factory_pq_lumasetting_cvbs_combsaturation"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/textview_factory_pq_lumasetting_preyoffset"
                    android:layout_width="180dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_textview_factory_pq_lumasetting_pre_yoffset"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />

                <TextView
                    android:id="@+id/textview_factory_pq_lumasetting_pre_yoffsetval"
                    android:layout_width="133dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/str_textview_factory_pq_lumasetting_text"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>
            <!-- Pre YGain -->

            <LinearLayout
                android:id="@+id/linearlayout_factory_pq_lummasetting_ygain"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:background="@drawable/button_state"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/textview_factory_pq_lumasetting_ygain"
                    android:layout_width="180dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_textview_factory_pq_lumasetting_pre_ygain"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />

                <TextView
                    android:id="@+id/textview_factory_pq_lumasetting_pre_ygainval"
                    android:layout_width="133dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/str_textview_factory_pq_lumasetting_text"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>

            <!-- For CVBS Comb Contrast -->

            <LinearLayout
                android:id="@+id/linearlayout_factory_pq_lumasetting_cvbs_comcontrast"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:background="@drawable/button_state"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/textview_factory_pq_lumasetting_cvbs_combcontrastval"
                    android:layout_width="180dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_textview_factory_pq_lumasetting_cvbs_comb_contrast"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />

                <TextView
                    android:id="@+id/str_textview_factory_pq_lumasetting_cvbs_combcontrastval"
                    android:layout_width="133dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/str_textview_factory_pq_lumasetting_text"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>
            <!-- For CVBS Comb Brightness -->

            <LinearLayout
                android:id="@+id/linearlayout_factory_pq_lumasetting_cvbs_combbrightness"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:background="@drawable/button_state"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/textview_factory_pq_lumasetting_cvbs_combbrightness"
                    android:layout_width="180dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_textview_factory_pq_lumasetting_cvbs_comb_brightness"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />

                <TextView
                    android:id="@+id/textview_factory_pq_lumasetting_cvbs_combbrightnessval"
                    android:layout_width="133dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/str_textview_factory_pq_lumasetting_text"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>

            <!-- For Comb Saturation -->

            <LinearLayout
                android:id="@+id/linearlayout_factory_pq_lumasetting_cvbs_combsaturation"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:background="@drawable/button_state"
                android:focusable="true"
                android:nextFocusDown="@+id/linearlayout_factory_pq_lummasetting_preyoffset"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/textview_factory_pq_lummasetting_cvbs_combsaturation"
                    android:layout_width="180dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_textview_factory_pq_lumasetting_cvbs_comb_saturation"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />

                <TextView
                    android:id="@+id/textview_factory_pq_lummasetting_cvbs_combsaturationval"
                    android:layout_width="133dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/str_textview_factory_pq_lumasetting_text"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>