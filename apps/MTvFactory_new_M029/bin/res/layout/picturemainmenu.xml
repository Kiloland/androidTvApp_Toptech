    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ViewFlipper
        android:id="@+id/picture_view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:persistentDrawingCache="animation" >

        <include layout="@layout/picturemenu" />

        <include layout="@layout/picturemodeadjust" />

        <include layout="@layout/nonlinearadjust" />

        <include layout="@layout/adcadjust" />

        <include layout="@layout/wbadjust" />

        <include layout="@layout/overscanadjust" />

        <include layout="@layout/nonstandardadjust" />

        <include layout="@layout/sscadjust" />

        <include layout="@layout/peqadjust" />

        <include layout="@layout/pq" />
    </ViewFlipper>

</LinearLayout>