            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_wbadjust_colortemp"
            android:textColor="#ffffff"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/textview_factory_wbadjust_colortemp_val"
            android:layout_width="133dip"
            android:layout_height="33dip"
            android:gravity="center"
            android:text="@string/str_textview_factory_wbadjust_colortemp_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />
    </LinearLayout>
    <!-- R Gain -->

    <LinearLayout
        android:id="@+id/linearlayout_factory_wbadjust_rgain"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:background="@drawable/button_state"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/textview_factory_wbadjust_rgain"
            android:layout_width="93dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_factory_wbadjust_rgain"
            android:textColor="#ffffff"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/textview_factory_wbadjust_val"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:gravity="left|center_vertical"
            android:text="@string/str_textview_factory_wbadjust_default_val"
            android:textColor="#ffffff"
            android:textSize="13dip" />

        <ProgressBar
            android:id="@+id/progressbar_facroty_wbadjust_rgain"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="133dip"
            android:layout_height="5dip"
            android:layout_below="@+id/progressbar_factory_wbadjust_rgainbelow"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="15dip"
            android:max="2047"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>
    <!-- G Gain -->

