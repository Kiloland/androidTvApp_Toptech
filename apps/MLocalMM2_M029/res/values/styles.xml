    <style name="editor_layout_LinearLayout">
		<item name="android:layout_gravity">center_vertical|center_horizontal</item>
		<item name="android:background">@drawable/editor_btn</item>
		<item name="android:layout_width">300dip</item>
		<item name="android:layout_height">55dip</item>
		<item name="android:orientation">horizontal</item>
	</style>
	
	<style name="editor_layout_ImageView">
		<item name="android:layout_width">48dip</item>
		<item name="android:layout_height">50dip</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_marginLeft">15dip</item>
	</style>
	
	<style name="editor_layout_TextView">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:paddingLeft">40dp</item>
		<item name="android:layout_gravity">center|left</item>
	</style>	
	
	<style name="editor_layout_Line">
		<item name="android:layout_gravity">center_vertical|center_horizontal</item>
		<item name="android:layout_width">200dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/panel_separator</item>
	</style>
