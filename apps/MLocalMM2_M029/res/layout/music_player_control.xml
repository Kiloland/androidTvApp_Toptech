<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/music_suspension_layout"

    android:layout_width="wrap_content"

    android:layout_height="wrap_content"

    android:layout_gravity="bottom|center_vertical"

    android:gravity="center_vertical"

    android:orientation="vertical" >






    <LinearLayout

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:orientation="horizontal" >



        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:background="@drawable/player_bg_l" >

        </LinearLayout>



        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:background="@drawable/player_bg_m"

            android:orientation="vertical" >



            <LinearLayout

                android:id="@+id/music_message"

                android:layout_width="642dip"

                android:layout_height="30dip"

                android:layout_weight="2"

                android:orientation="horizontal" >



                <TextView

                    android:id="@+id/music_current_name"

                    android:layout_width="321dip"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:gravity="center|left"

                    android:paddingLeft="5dip"

                    android:textColor="#FFFFFF"

                    android:textSize="15.0dip" />



                <TextView

                    android:id="@+id/music_current_artist"

                    android:layout_width="100dip"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:gravity="center|left"

                    android:paddingLeft="5dip"

                    android:textColor="#FFFFFF"

                    android:textSize="15.0dip" />



                <TextView

                    android:id="@+id/music_current_num"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:gravity="center|right"

                    android:paddingRight="5dip"

                    android:textColor="#FFFFFF"

                    android:textSize="15.0dip" />

            </LinearLayout>



            <LinearLayout

                android:id="@+id/op_button"

                android:layout_width="550dip"

                android:layout_height="wrap_content"

                android:layout_weight="7"

                android:gravity="center"

                android:orientation="horizontal"

                android:paddingLeft="75dip" >



                <com.jrm.localmm.ui.music.RepeatingImageButton

                    android:id="@+id/music_previous"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:background="@drawable/player_icon_previous" />



                <com.jrm.localmm.ui.music.RepeatingImageButton

                    android:id="@+id/music_play"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:background="@drawable/player_icon_pause_focus" />



                <com.jrm.localmm.ui.music.RepeatingImageButton

                    android:id="@+id/music_next"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:background="@drawable/player_icon_next" />



                <ImageView

                    android:id="@+id/music_cir"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:background="@drawable/player_icon_loop" />



                <ImageView

                    android:id="@+id/music_list"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:background="@drawable/player_icon_list" />



                <ImageView

                    android:id="@+id/music_info"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:background="@drawable/player_icon_infor" />

            </LinearLayout>



            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="bottom|center_horizontal"

                android:layout_weight="2"

                android:gravity="center"

                android:orientation="horizontal"

                android:paddingBottom="3dip" >



                <TextView

                    android:id="@+id/txtLapse"

                    android:layout_width="50dip"

                    android:layout_height="wrap_content"

                    android:gravity="center"

                    android:text="@string/music_default_time"

                    android:textSize="10.0dip" />



                <SeekBar

                    android:id="@+id/skbGuage"

					android:progressDrawable="@drawable/seekbar_style"
					
                    android:layout_width="533dip"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:layout_marginLeft="3dip"

                    android:focusable="false"

                    android:maxHeight="12dip"

                    android:minHeight="12dip"

                    android:paddingLeft="7dip"

                    android:paddingRight="8dip"

                    android:thumb="@drawable/thumb" />



                <TextView

                    android:id="@+id/txtDuration"

                    android:layout_width="50dip"

                    android:layout_height="wrap_content"

                    android:gravity="center"

                    android:text="@string/music_default_time"

                    android:textSize="10.0dip" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:background="@drawable/player_bg_r" >

        </LinearLayout>

    </LinearLayout>



</LinearLayout>