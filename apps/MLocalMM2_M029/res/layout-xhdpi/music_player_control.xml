<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_suspension_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/player_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/music_message"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.jrm.localmm.ui.view.MarqueeTextView
                    android:id="@+id/music_current_name"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center|left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="8dip"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textSize="14.0dip" />

                <com.jrm.localmm.ui.view.MarqueeTextView
                    android:id="@+id/music_current_artist"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center|left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textSize="14.0dip" />

                <TextView
                    android:id="@+id/music_current_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:paddingRight="5dip"
                    android:textColor="#FFFFFF"
                    android:textSize="14.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/op_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                >

                <com.jrm.localmm.ui.music.RepeatingImageButton
                    android:id="@+id/music_previous"
                    android:layout_width="40dip"
                    android:layout_height="32dip"
                    android:background="@drawable/player_icon_previous"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                     />

                <com.jrm.localmm.ui.music.RepeatingImageButton
                    android:id="@+id/music_play"
                    android:layout_width="40dip"
                    android:layout_height="32dip"
                    android:background="@drawable/player_icon_pause_focus"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"/>

                <com.jrm.localmm.ui.music.RepeatingImageButton
                    android:id="@+id/music_next"
                    android:layout_width="40dip"
                    android:layout_height="32dip"
                    android:background="@drawable/player_icon_next"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"/>

                <ImageView
                    android:id="@+id/music_cir"
                    android:layout_width="40dip"
                    android:layout_height="32dip"
                    android:layout_weight="1"
                    android:background="@drawable/player_icon_loop"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"/>

                <ImageView
                    android:id="@+id/music_list"
                    android:layout_width="40dip"
                    android:layout_height="32dip"
                    android:background="@drawable/player_icon_list"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"/>

                <ImageView
                    android:id="@+id/music_info"
                    android:layout_width="40dip"
                    android:layout_height="32dip"
                    android:background="@drawable/player_icon_infor"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"/>
                <ImageView
                    android:id="@+id/music_setting"
                    android:layout_width="40dip"
                    android:layout_height="32dip"
                    android:background="@drawable/player_icon_setting"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="4dip"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="5dip" >

                <TextView
                    android:id="@+id/txtLapse"
                    android:layout_width="55dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/music_default_time"
                    android:textSize="14.0dip" />

                <SeekBar
                    android:id="@+id/skbGuage"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:focusable="false"
                    android:maxHeight="12dip"
                    android:minHeight="12dip"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@drawable/thumb" />

                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="8dip"
                    android:paddingRight="20dip"
                    android:text="@string/music_default_time"
                    android:textSize="14.0dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>