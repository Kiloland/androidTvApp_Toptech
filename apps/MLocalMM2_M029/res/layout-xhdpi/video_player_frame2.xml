<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/videoplayactivity"
    android:background="#000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

        <!-- first videoview -->

   <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/firstvideolayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include layout="@layout/firstview" />
    </LinearLayout>
    <!-- seconde videoview -->

  <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/secondvideolayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include layout="@layout/secondview" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/video_focus_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/video_focus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="3dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:text="@string/video"
            android:textColor="@android:color/transparent" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/nonevideolayout"
            android:visibility="gone"
            android:background="@drawable/bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
    </LinearLayout>
    <ImageView android:id="@+id/im_video_player_pause"
         android:layout_gravity="top|left"
         android:layout_height="60dip"
         android:layout_width="60dip"
         android:layout_marginLeft="5dip"
         android:layout_marginTop="5dip"
         android:visibility="invisible"
         android:background="@drawable/player_icon_pause_focus"
         />
    <ImageView android:id="@+id/im_video_player_kuaijin"
         android:layout_gravity="top|left"
         android:layout_height="60dip"
         android:layout_width="60dip"
         android:layout_marginLeft="5dip"
         android:layout_marginTop="5dip"
         android:visibility="invisible"
         android:background="@drawable/player_icon_wind_focus"
         />
    <TextView 
        android:id="@+id/im_video_player_FF_FR_val"
        android:layout_gravity="top|left"
        android:gravity="center|left"
        android:layout_height="60dip"
        android:layout_width="80dip"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="75dip"
        android:textSize="33sp"
        />
    <ImageView android:id="@+id/im_video_player_kuaitui"
         android:layout_gravity="top|left"
         android:layout_height="60dip"
         android:layout_width="60dip"
         android:layout_marginLeft="5dip"
         android:layout_marginTop="5dip"
         android:visibility="invisible"
         android:background="@drawable/player_icon_rewind_focus"
         />
