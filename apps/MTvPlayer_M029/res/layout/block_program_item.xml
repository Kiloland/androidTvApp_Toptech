<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"

	android:id="@+id/program_favorite_list_view_item"
	android:layout_width="fill_parent"
	android:layout_height="30dp"
	android:orientation="horizontal"
	android:baselineAligned="false">

	<TextView
		android:id="@+id/program_parentalcontrol_number"
		android:layout_width="60dip"
		android:layout_height="30dip"
		android:gravity="center"
		android:textSize="16sp"
		android:layout_marginLeft="15dp"
		android:textColor="#ffffff"></TextView>
	<TextView
		android:id="@+id/program_parentalcontrol_data"
		android:layout_width="140dip"
		android:layout_height="30dip"
		android:ellipsize="marquee"
		android:gravity="center"
		android:marqueeRepeatLimit="marquee_forever"
		android:singleLine="true"
		android:textSize="16sp"
		android:textColor="#ffffff"></TextView>
	<ImageView
		android:id="@+id/is_pclocked"
		android:layout_width="18dp"
		android:layout_height="18dp"
		android:layout_gravity="center"
		android:src="@drawable/list_menu_img_lock_focus"
		></ImageView>
</LinearLayout>