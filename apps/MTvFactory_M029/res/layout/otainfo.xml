<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="650dp"
    android:background="#3280A0"
    android:orientation="vertical" >
	<LinearLayout      
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:text="@string/str_factory_ota_info"
        android:textColor="#ffffff"
        android:textSize="17dip" />
        <!-- For plaName -->
            <LinearLayout
                android:id="@+id/linearlayout_plaName"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:focusable="false"
                android:paddingLeft="20dp"
                android:background="@drawable/button_state">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_factory_ota_info_praname"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
                <TextView
                    android:id="@+id/factory_ota_info_praname_val"
                    android:layout_width="250dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>
            <!-- For cusName -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:paddingLeft="20dp"
                android:focusable="false"
                android:background="@drawable/button_state">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_factory_ota_info_cusname"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
                <TextView
                    android:id="@+id/factory_ota_info_cusname_val"
                    android:layout_width="250dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>
            <!-- For proName -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:paddingLeft="20dp"
                android:focusable="false"
                android:background="@drawable/button_state">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_factory_ota_info_proname"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
                <TextView
                    android:id="@+id/factory_ota_info_proname_val"
                    android:layout_width="250dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>
            <!-- For plaName -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:paddingLeft="20dp"
                android:focusable="false"
                android:background="@drawable/button_state">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_factory_ota_info_preversion"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
                <TextView
                    android:id="@+id/factory_ota_info_preversion_val"
                    android:layout_width="250dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>
            <!-- For Total run time -->
            <LinearLayout
                android:id="@+id/linearlayout_factory_total_run_time"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:paddingLeft="20dp"
                android:background="@drawable/button_state">
                <TextView
                    android:id="@+id/textview_factory_total_run_time"
                    android:layout_width="133dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_total_run_time"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
                <TextView
                    android:id="@+id/textview_factory_running_time"
                    android:layout_width="133dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/str_textview_factory_total_run_time"
                    android:textColor="#ffffff"
                    android:textSize="13dip" />
            </LinearLayout>
</LinearLayout>
</LinearLayout>
